{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
		],
		"rootDir": "src",
		"strict": true,   // enable all strict type-checking options
		"importsNotUsedAsValues": "error", // For Svelte, which complains because it can't understand type vs. definition import
		"noUnusedParameters": true,  // Report errors on unused parameters.
		"paths": {
			"@core/*": ["./src/core/*"],
			"@webviews/*": ["./src/webviews/*"],
		},
		"types": [
			"node",
			"svelte",
		],
	},
	"exclude": [
		"node_modules",
		".vscode-test",
	],
}